
page{
	overflow-x: display;
}
.play_icon{
	width: 150rpx;
	height: 150rpx;
	margin-left: auto;
	margin-right: auto;
	margin-top: 50%;
}
.scroll-content{
	width: 750rpx;
	
	margin: 0;
	overflow: scroll;
	position: absolute;
}
.video-view{
	background-position: center; 
	background-size: contain;
	background-repeat: no-repeat;
	width: 750rpx;
	margin: 0;
	position: relative;
	background-color: black;
}
.video-view video{
	width: 750rpx;
	margin: 0;
	position: relative;
	-o-object-fit: contain;
	   object-fit: contain;
}
.video-view .goods{
	position: absolute;
	width: 100%;
	height: 400rpx;
	bottom: 0;
	background-color: black;
}
.video-view .goods .title{
	color: white;
	font-size: 36rpx;
}
.video-view .goods .payinfo{
	margin-top: 17rpx;
}
.video-view .goods .seller{
	color: gray;
	font-size: 24rpx;
	margin-top: 6rpx;
}
.video-view .goods .payinfo .currency{
	color: white;
	font-size: 24rpx;
}
.video-view .goods .payinfo .price{
	color: white;
	font-size: 40rpx;
}
.video-view .goods .payinfo .payernum{
	color: gray;
	font-size: 24rpx;
	margin-left: 20rpx;
}
.video-view .goods .action{
	padding-top: 40rpx;
}
.video-view .goods .action image{
	width: 60rpx;
	height: 60rpx;
}
.video-view .goods .action .share{
	margin-right: 20rpx;
	text-align: center;
	color: gray;
}
.video-view .goods .action .favor{
	margin-right: 20rpx;
	text-align: center;
	color: gray;
}
.video-view .goods .action button{
	background-color: #b79846;
}
.video-view .goods .user .head-img{
	border-radius: 50rpx;
	width: 60rpx;
	height: 60rpx;
}
.video-view .goods .user .nickname{
	color: gray;
	font-size: 24rpx;
	margin-left: 20rpx;
}
.video-view .goods .location{
	background-color: rgba(100,100,100,0.5);
	padding: 5rpx 10rpx;
	border-radius: 5rpx;
	font-size: 19rpx;
	color: gray;
	margin-left: 20rpx;
}
.video-view .goods .location .location-icon{
	font-size: 22rpx;
}
.video-view .goods .location .location_name{
}
.video-view .goods .desc{
	margin-top: 20rpx;
	font-size: 24rpx;
	color: gray;
}
.tips{
	background-color: #b79846;
}


