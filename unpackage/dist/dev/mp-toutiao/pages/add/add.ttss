
.cu-list .cu-item.order{
	height: 220rpx;
	padding: 10rpx;
}
.cu-list .cu-item.order .cu-avatar{
	width: 200rpx;
	height: 200rpx;
	left: 0rpx;
	background-size: cover;
	background-position: center;
	-webkit-box-align: center;
	-webkit-align-items: center;
	    -ms-flex-align: center;
	        align-items: center;
}
.cu-list .cu-item.order .content{
	left: 10rpx;
	width: 520rpx;
	height:200rpx;
	position: relative;
	display: inline-block;
	vertical-align: middle;
}
.cu-list .cu-item.order .content .goods-title{
	height:100rpx;
	-webkit-box-align: start;
	-webkit-align-items: flex-start;
	    -ms-flex-align: start;
	        align-items: flex-start;
	overflow: hidden;
}
.cu-list .cu-item.order .content .goods-seller{
	height:50rpx;
	-webkit-box-align: end;
	-webkit-align-items: flex-end;
	    -ms-flex-align: end;
	        align-items: flex-end;
}
.cu-list .cu-item.order .content .goods-action{
	height:50rpx;
	-webkit-box-align: end;
	-webkit-align-items: flex-end;
	    -ms-flex-align: end;
	        align-items: flex-end;
}

